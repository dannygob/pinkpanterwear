<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reset_code_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context="com.example.pink.Activities.ResetCodeActivity">

    <!-- 🔷 Títtle superior -->
    <TextView
        android:id="@+id/reset_code_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RESET CODE"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 🔸 Contented principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/view_top_curved_bg"
        app:layout_constraintTop_toBottomOf="@id/reset_code_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 📝 Mensa information -->
        <TextView
            android:id="@+id/password_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Password reset code sent to:"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/phone_number_reset_code_sent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textAlignment="center"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/password_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔐 Campos OTP -->
        <LinearLayout
            android:id="@+id/otp_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/phone_number_reset_code_sent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Campo 1 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/verify_1"
                style="@style/OtpInputStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo 2 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/verify_2"
                style="@style/OtpInputStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo 3 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/verify_3"
                style="@style/OtpInputStyle"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo 4 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/verify_4"
                style="@style/OtpInputStyle"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- ✅ Bottom de verification -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_code_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textAllCaps="false"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/otp_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔁 resend de códe -->
        <LinearLayout
            android:id="@+id/resend_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/reset_code_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend code in?" />

            <TextView
                android:id="@+id/resend_OTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verify_resend_code"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:layout_marginStart="6dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/resend_OTP_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginStart="6dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>