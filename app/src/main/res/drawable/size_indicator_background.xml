<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="8dp" />
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="?attr/colorPrimary" />
            <corners android:radius="8dp" />
            <solid android:color="@android:color/transparent"/> <!-- Or a light surface color -->
            <padding android:left="12dp" android:right="12dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>
</selector>
