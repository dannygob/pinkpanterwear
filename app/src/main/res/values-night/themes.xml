<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- ðŸŒ¸ Base Theme -->
    <style name="Theme.pink" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- App font -->
        <item name="android:fontFamily">@font/jacques_francois</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryContainer">@color/light_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/light_dark_blue</item>

        <!-- Default animations -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <!-- ðŸŒ¸ No ActionBar variant -->
    <style name="Theme.pink.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar overlay for toolbars -->
    <style name="Theme.pink.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup windows like menus -->
    <style name="Theme.pink.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ðŸ” Slide animations for activity transitions -->
    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>

        <!-- Customize your theme here -->
        <!-- Add button styles, surface colors, etc. -->
    </style>
</resources>

